The key to open this problem is to understand arguments!! and indexOf() method!!! 


function uniteUnique(arr) {
  var finalarr = [];
  for (var i = 0; i < arguments.length; i++){
    var tarr = arguments[i];
    for(var j = 0; j < tarr.length; j++){
      var ttarr = tarr[j];
      if(finalarr.indexOf(ttarr) < 0){
        finalarr.push(ttarr);
      }
    }
  }
  return finalarr;
}
